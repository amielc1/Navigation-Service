<Window x:Class="NavigationSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NavigationSimulator"
        xmlns:vm="clr-namespace:NavigationSimulator.ViewModels"
        xmlns:helpers="clr-namespace:NavigationSimulator.Helpers"
        mc:Ignorable="d"
        Title="Navigation Simulation Dashboard" Height="600" Width="800" Background="#252526">
    
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header / Dashboard -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Border Background="#333337" Padding="10" CornerRadius="5" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Altitude" Foreground="#999999" FontSize="10"/>
                    <TextBlock Text="{Binding Altitude, StringFormat={}{0:F1} m}" Foreground="White" FontSize="18" FontWeight="Bold"/>
                </StackPanel>
            </Border>
            <Border Background="#333337" Padding="10" CornerRadius="5" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Speed" Foreground="#999999" FontSize="10"/>
                    <TextBlock Text="{Binding SpeedKph, StringFormat={}{0:F1} km/h}" Foreground="White" FontSize="18" FontWeight="Bold"/>
                </StackPanel>
            </Border>
            <Border Background="#333337" Padding="10" CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="Heading" Foreground="#999999" FontSize="10"/>
                    <TextBlock Text="{Binding HeadingDeg, StringFormat={}{0:F1}°}" Foreground="White" FontSize="18" FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Simulation View (Canvas) -->
        <Border Grid.Row="1" Background="Black" BorderBrush="#3F3F46" BorderThickness="1" ClipToBounds="True">
            <Canvas Name="FlightCanvas">
                <!-- Grid lines for reference (simplistic) -->
                <Line X1="0" Y1="250" X2="800" Y2="250" Stroke="#1E1E1E" StrokeThickness="1" />
                <Line X1="400" Y1="0" X2="400" Y2="500" Stroke="#1E1E1E" StrokeThickness="1" />

                <!-- Ground Truth (Green Dot) -->
                <Ellipse Fill="Lime" Width="10" Height="10" Margin="-5">
                    <Ellipse.RenderTransform>
                        <TranslateTransform 
                            X="{Binding TruthLon, ConverterParameter=400|9.0|20000, Converter={local:LatLonToXYConverter IsLon=True}}" 
                            Y="{Binding TruthLat, ConverterParameter=250|45.0|20000, Converter={local:LatLonToXYConverter IsLon=False}}"/>
                    </Ellipse.RenderTransform>
                </Ellipse>

                <!-- Noisy GPS (Red Cross) -->
                <Canvas>
                    <Canvas.RenderTransform>
                        <TranslateTransform 
                            X="{Binding NoisyLon, ConverterParameter=400|9.0|20000, Converter={local:LatLonToXYConverter IsLon=True}}" 
                            Y="{Binding NoisyLat, ConverterParameter=250|45.0|20000, Converter={local:LatLonToXYConverter IsLon=False}}"/>
                    </Canvas.RenderTransform>
                    <Line X1="-5" Y1="-5" X2="5" Y2="5" Stroke="Red" StrokeThickness="2" />
                    <Line X1="5" Y1="-5" X2="-5" Y2="5" Stroke="Red" StrokeThickness="2" />
                </Canvas>
            </Canvas>
        </Border>

        <!-- Controls -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Command="{Binding StartCommand}" Content="Start Simulation" Padding="20,10" Margin="0,0,10,0" 
                    Background="#007ACC" Foreground="White" BorderThickness="0"/>
            <Button Command="{Binding StopCommand}" Content="Stop Simulation" Padding="20,10" 
                    Background="#D13438" Foreground="White" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
